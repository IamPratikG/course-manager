{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "moduleResolution": "node",
        "outDir": "./build",
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "allowJs": true,
        "strict": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist/*", "src/static"],
    "lib": ["es6"]
}
